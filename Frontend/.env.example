# ============================================
# BLOOM APP - ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# AI MODEL API KEYS
# ============================================

# Phi-4 Multimodal (The "Eyes" - Vision/Scanning)
PHI4_API_KEY=your_phi4_api_key_here
PHI4_ENDPOINT=https://api.openrouter.ai/v1/chat/completions

# DeepSeek-R1 (The "Brain" - Pricing Logic/Reasoning)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_ENDPOINT=https://api.deepseek.com/v1/chat/completions

# Alternative: OpenRouter (unified endpoint for both models)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1/chat/completions

# ============================================
# MONGODB ATLAS - DATABASE CONNECTION
# ============================================

# Main Atlas Connection String (Bloom Database)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/Bloom?retryWrites=true&w=majority

# Database Name
MONGODB_DB_NAME=Bloom

# Atlas App Services (for Realm/Functions)
ATLAS_APP_ID=your_atlas_app_id_here
ATLAS_API_KEY=your_atlas_data_api_key_here

# ============================================
# BACKEND / RENDER DEPLOYMENT
# ============================================

# Render Backend URL
BACKEND_URL=https://bloom-k1gb.onrender.com

# Local Development Backend
LOCAL_BACKEND_URL=http://localhost:5000

# Backend Port (for local development)
PORT=5000

# ============================================
# GOOGLE VISION AI (Alternative/Backup for Scanning)
# ============================================
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json

# ============================================
# FIREBASE CLOUD MESSAGING (Push Notifications)
# ============================================
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# ============================================
# REVENUECAT (In-App Purchases/Subscriptions)
# ============================================
REVENUECAT_PUBLIC_SDK_KEY=your_revenuecat_public_key_here
REVENUECAT_API_KEY=your_revenuecat_secret_key_here
REVENUECAT_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# EXPO / REACT NATIVE
# ============================================
EXPO_PROJECT_ID=your_expo_project_id_here
EAS_ACCESS_TOKEN=your_eas_token_here

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your_session_secret_here

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_secret_here

AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your_s3_bucket_name_here
AWS_REGION=us-east-1

SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@bloom.app

# ============================================
# DEVELOPMENT / DEBUGGING
# ============================================
DEBUG=true
LOG_LEVEL=debug
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_SCANNING=true
ENABLE_GROUP_BUY=true
ENABLE_NOTIFICATIONS=true
ENABLE_SUBSCRIPTIONS=true

# ============================================
# END OF FILE
# ============================================
